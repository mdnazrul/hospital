    <script>
        $(document).ready(function () {
            $("#Quantity").keyup(function () {
                var x = $("#Rate").val();
                var y = $("#Quantity").val();
                var z = parseInt(x) * parseInt(y);
                $("#Amount").val(parseInt(z));
            });
            //................copy.................
            //$("#PayAmount").keyup(function () {
            //    var x = $("#GrandTotalAmount").val() - $("#PayAmount").val();
            //    $("#DueAmount").val(x);
            //});

            //..................Copy End...................
        });
        $(document).ready(function () {
            $("#PayAmount").keyup(function () {
                var a = $("#GrandTotalAmount").val();
                var b = $("#PayAmount").val();
                var c = parseInt(a) - parseInt(b);
                $("#DueAmount").val(parseInt(c));
            });

        });

        var i = 0;
        var itemfound = false;
        var SaleItems = [];
        var BloodPurchaseVoucherNo = 0;
        $(document).ready(function () {
            $('#add').click(function () {
                if (($('#BloodID').val() == '')) {
                    alert('Select Blood');
                }
                else if (($('#Rate').val() == '')) {
                    alert('Select Rate');
                }
                else if (($('#Quantity').val() == '')) {
                    alert('Quantity is required');
                }

                else if (($('#Amount').val() == '')) {
                    alert('Select Amount');
                }
                else {
                    SaleItems.push({
                        BloodID: $("#BloodID").val(),
                        Rate: $("#Rate").val(),
                        Quantity: $("#Quantity").val(),
                        Amount: $("#Amount").val()

                    });
                    GeneratedItemTable();
                }
            });

            //Save button click function
            $('#btnSave').click(function () {
                var isAllValid = true;

                if (SaleItems.length == 0) {
                    $('#SaleItems').html('<span style="color:red;">Please add sale items</span>');
                    isAllValid = false;
                }
                //..................copy.................
                if (parseFloat($("#PayAmount").val()) > parseFloat($("#GrandTotalAmount").val())) {
                    alert('Pay amount can not be large than grand total amount ');
                    return false;
                }
                //....................Copy End...........   
                if (($('#PurchaseDate').val() == '')) {
                    alert('Select PurchaseDate');
                }
                else {
                    BloodPurchaseVoucherNo: "@ViewBag.BloodPurchaseVoucherNo";
                    $(this).val('Please wait...');
                    var data = {
                        BloodPurchaseVoucherNo: "@ViewBag.BloodPurchaseVoucherNo",
                        PurchaseDate: $("#PurchaseDate").val(),
                        BloodSupplyerID: $("#BloodSupplyerID").val(),
                        GrandTotalAmount: $("#GrandTotalAmount").val(),
                        PayAmount: $("#PayAmount").val(),
                        DueAmount: $("#DueAmount").val(),
                        Remark: $("#Remark").val(),
                        UserInfoID: $("#UserInfoID").val(),
                        EntryDate: $("#EntryDate").val(),
                        UpdateDate: $("#UpdateDate").val(),
                        tbl_BloodPurchaseeDetails: SaleItems
                    }
                    $.ajax({
                        url: '../BloodPurchase/indorBloodPurchaseProcess',
                        type: "POST",
                        data: JSON.stringify(data),
                        dataType: "JSON",
                        contentType: "application/json",
                        success: function (d) {
                            if (d.status == true) {
                                //alert('Successfully done.');
                                alert('Successfully done. Your Voucher No ' + d.BloodPurchaseVoucherNo);
                                SaleItems = [];
                                i = 0;
                                //$('#IndorBloodsalesVoucherNo').val('');
                                $('#PurchaseDate').val('');
                                $('#BloodSupplyerID').val('');
                                $('#GrandTotalAmount').val('');
                                $('#PayAmount').val('');
                                $('#DueAmount').val('');
                                $('#Remark').val('');
                                $('#UserInfoID').val('');
                                $('#EntryDate').val('');
                                $('#UpdateDate').val('');
                                $('#BloodPurchaseVoucherNo').val(d.BloodPurchaseVoucherNo);
                                var table = document.getElementById("dataTable");
                                table.innerHTML = "";
                                window.location.reload();
                            }
                            else {
                                alert('Failed');
                            }
                            $('#btnSave').val('Save');
                        },
                        error: function () {
                            alert('Error. Please try again.');
                            $('#btnSave').val('Add Create');
                        }
                    });
                }
            });

        });

        //Pop Item If Row is deleted
        function deleteRow(t) {
            var table = document.getElementById("dataTable");
            var row = t.parentNode.parentNode;
            var rowCount = table.rows.length;
            //.................copy start.............
            var x = parseInt($("#GrandTotalAmount").val());
            var y = parseInt(table.rows[row.rowIndex].cells[3].innerHTML);
            z = parseInt(x - y);
            $("#GrandTotalAmount").val(parseInt(z));
            //..............copy end.............

            SaleItems.pop({
                BloodID: table.rows[row.rowIndex].cells[0].innerHTML,
                Rate: parseInt(table.rows[row.rowIndex].cells[1].innerHTML),
                Quantity: table.rows[row.rowIndex].cells[2].innerHTML,
                Amount: table.rows[row.rowIndex].cells[3].innerHTML
            });
            document.getElementById("dataTable").deleteRow(row.rowIndex);
            i = i - 1;
            if (i == 0) {
                table.innerHTML = "";
            }
        }

        function GeneratedItemTable() {
            var table = document.getElementById("dataTable");
            if (i == 0) {
                table.innerHTML = '<tr><th>Blood</th><th>Rate</th><th>Quantity</th><th>Amount</th><th>Action</th></tr>'
            }
            var rowCount = table.rows.length;
            var row = table.insertRow(rowCount);
            //Check if part already Added
            for (var r = 1, n = table.rows.length; r < n; r++) {
                for (var c = 1, m = table.rows[r].cells.length; c < m; c++) {
                    if (table.rows[r].cells[c].innerHTML == $('#BloodID').find('option:selected').text()) {
                        alert('This Id already Added');
                        itemfound = true;
                        break;
                    }
                    else {
                        itemfound = false;
                        continue;
                    }
                }
            }

            if (itemfound == false) {

                var cell1 = row.insertCell(0);
                var cell2 = row.insertCell(1);
                var cell3 = row.insertCell(2);
                var cell4 = row.insertCell(3);
                var cell5 = row.insertCell(4);

                cell1.innerHTML = $('#BloodID').find('option:selected').val().trim();
                cell2.innerHTML = $('#Rate').val().trim();
                cell3.innerHTML = $('#Quantity').val().trim();
                cell4.innerHTML = $("#Amount").val().trim();

                cell5.innerHTML = '<img src="~/Images/delete.png" alt="Delete" style="cursor:pointer" onclick="deleteRow( this)" style="font-family:Tahoma;font-size:13px ;font-weight:bold;width:56px;height:26px" />'
                i = i + 1;
            }
            var grand = 0;
            if ($("#GrandTotalAmount").val() != "") {
                var grand = $("#GrandTotalAmount").val();
            }
            all_total = parseInt(grand) + parseInt($("#Amount").val());
            $("#GrandTotalAmount").val(parseInt(all_total));
            $('#BloodID').val('');
            $('#Rate').val('');
            $('#Quantity').val('');
            $('#Amount').val('');
        }
    </script>
</head>
<body>
    <div>
        <h2 style="text-align:center;color:#ff6a00">Blood Purchase</h2>
        <hr />
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="IndorBloodsalesVoucherNo">BloodPurchaseNo</label>
                            <input type="text" class="form-control" id="BloodPurchaseVoucherNo" readonly value="@ViewBag.BloodPurchaseVoucherNo" />
                        </div>
                        <div class="form-group">
                            <label for="PurchaseDate">Purchase Date</label>
                            <input type="text" class="form-control" id="PurchaseDate" />
                        </div>
                        <div class="form-group">
                            <label for="Company Name">Company Name</label>
                            @Html.DropDownList("BloodSupplyerID", (SelectList)ViewData["tbl_BloodSupplierInfo"], "...Select Company Name...", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="Blood Group">Blood Group</label>
                            @Html.DropDownList("BloodID", (SelectList)ViewData["tbl_BloodGroup"], "...Select Blood...", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="Rate">Rate</label>
                            <input type="text" class="form-control" id="Rate" />
                        </div>
                        <div class="form-group">
                            <label for="Quantity">Quantity</label>
                            <input type="text" class="form-control" id="Quantity" />
                        </div>
                        <div class="form-group">
                            <div style="float:left;width:100%">
                                <label for="Amount">Amount</label>
                            </div>
                            <div style="float:left;width:38%">
                                <input type="text" class="form-control" id="Amount" onchange="grand();" />
                            </div>
                            <div style="float: left;width:38%;margin-left:10px;">
                                <input type="button" id="add" class="btn btn-success" value="Add">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="GrandTotalAmount">Grand Total Amount</label>
                            <input type="text" class="form-control" id="GrandTotalAmount"/>
                        </div>
                        <div class="form-group">
                            <label for="PayAmount">Pay Amount</label>
                            <input type="text" class="form-control" id="PayAmount" />
                        </div>
                        <div class="form-group">
                            <label for="DueAmount">Due Amount</label>
                            <input type="text" class="form-control" id="DueAmount" />
                        </div>
                        <div class="form-group">
                            <label for="Remark">Remarks</label>
                            <input type="text" class="form-control" id="Remark" />
                        </div>
                        @*<div class="form-group">
                            <label for="Blood Group">User Name</label>
                            @Html.DropDownList("UserInfoID", (SelectList)ViewData["tbl_UserInfo"], "...Select userName...", new { @class = "form-control" })
                        </div>*@
                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-10">
                                <input type="button" class="btn btn-primary" id="btnSave" value="Add Create" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="btn btn-group btn-lg" style="color: #ff6a00;">
                                @Html.ActionLink("Back To List", "bloodpurchaseList")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div id="SaleItems result_area">
                        <div class="CSSTableGenerator">
                            <table id="dataTable" class="gridtable" style="font-family:Tahoma;font-size:11px ;"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <link href="../Content/jquery.datetimepicker.css" rel="stylesheet" type="text/css" />
    <script src="../Scripts/jquery.datetimepicker.full.js" type="text/javascript"></script>
    <script type="text/javascript">
        $('#PurchaseDate').datetimepicker({
            timepicker: false,
            format: 'Y-m-d',
            formatDate: 'Y-m-d'
        });
    </script>
</body>
</html>
