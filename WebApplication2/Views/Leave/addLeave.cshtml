@model WebApplication2.Models.tbl_Leave

@{
    ViewBag.Title = "addLeave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title></title>
</head>
<body>
    <div>
        <h2 style="text-align:center;color:#ff6a00;">addLeave</h2>
        <hr />
        <h5 style="color:#ff6a00">@ViewBag.Messages</h5>
        @using (Html.BeginForm("addLeave", "Leave", FormMethod.Post))
        {
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(s => s.StaffID, "EmployeeName", new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.DropDownList("StaffID", (SelectList)ViewData["tbl_staffInfo"], "...Select StaffName...", new { @class = "form-control", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.LeaveDateFrom, " LeaveDateFrom", new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.LeaveDateFrom, new { @class = "form-control", placeholder = "Input LeaveDateFrom", id = "LeaveDateFrom", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.LeaveDateTo, " LeaveDateTo", new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.LeaveDateTo, new { @class = "form-control", placeholder = "Input LeaveDateTo", id = "LeaveDateTo", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.TotalLeaveDays, " TotalDays", new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.TotalLeaveDays, new { id = "TotalLeaveDays", @class = "form-control", placeholder = "Input TotalLeaveDays", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.LeaveCause, " LeaveCause", new { @class = "control-label col-md-2" })
                                <div class="col-sm-4">
                                    @Html.RadioButtonFor(u => u.LeaveCause, "Sick")
                                    @Html.Label("Sick") &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                                    @Html.RadioButtonFor(model => model.LeaveCause, "Casual")
                                    @Html.Label("Casual")
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.TotalLeave, " TotalLeave", new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.TotalLeave, new { id = "TotalLeave", @class = "form-control", placeholder = "Input TotalLeave", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.Remarks, " Remarks", new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(u => u.Remarks, new { id = "Remarks", @class = "form-control", placeholder = "Input Remarks", Required = "required" })
                                </div>
                            </div>
                            @*<div class="form-group">
                                @Html.LabelFor(s => s.UserID, "UserName", new { @class = "control-label col-md-2" })
                                <div class="col-sm-10">
                                    @Html.DropDownList("UserID", (SelectList)ViewData["tbl_UserInfo"], "...Select userName...", new { @class = "form-control", Required = "required" })
                                </div>
                            </div>*@
                            <div class="form-group">
                                <div class="col-sm-offset-4 col-sm-10">
                                    <button type="submit" class="btn btn-default">Add To Create</button>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="btn btn-group btn-lg" style="color: #ff6a00;">
                                    @Html.ActionLink("Back To List", "leaveList")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <link href="../Content/jquery.datetimepicker.css" rel="stylesheet" type="text/css" />
    <script src="../Scripts/jquery.datetimepicker.full.js" type="text/javascript"></script>
    <script type="text/javascript">
        $('#LeaveDateFrom').datetimepicker({
            timepicker: false,
            format: 'Y-m-d',
            formatDate: 'Y-m-d'
        });

        $('#LeaveDateTo').datetimepicker({
            timepicker: false,
            format: 'Y-m-d',
            formatDate: 'Y-m-d'
        });

    </script>

</body>
</html>