@model WebApplication2.Models.tbl_DoctorDuty

@{
    ViewBag.Title = "doctordutyUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title> </title>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")"> </script>
    <script>
        $(document).ready(function () {
            var x = "@this.Request.QueryString["staffid"]";

            $("#StaffID option").each(function () {
                if ($(this).val() == x) {
                    $(this).attr('selected', 'selected');
                }
            });
        });

    </script>
</head>
<body>
    <div>
        <h2 style="text-align:center;color:#ff6a00">doctordutyUpdate</h2>
        <hr />
        <h4 style="color:#ff6a00">@ViewBag.Messages</h4>
        @using (Html.BeginForm("doctordutyUpdate", "DoctorDuty", FormMethod.Post))
        {
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(s => s.StaffID, "StaffName", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.DropDownList("StaffID", (SelectList)ViewData["tbl_staffInfo"], "...Select StaffName...", new { @class = "form-control", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.Shift, "Shift", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-4">
                                    @Html.RadioButtonFor(u => u.Shift, "Day")
                                    @Html.Label("Day") &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                                    @Html.RadioButtonFor(s => s.Shift, "Evening")
                                    @Html.Label("Evening")
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.VisitTime, " VisitTime", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.VisitTime, new { id = "VisitTime", @class = "form-control", placeholder = "Input VisitTime", Required = "required" })
                                </div>
                            </div>
                            @*<div class="form-group">
                                    @Html.LabelFor(s => s.VisitDescription, " VisitDescription", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(u => u.VisitDescription, new { id = "VisitDescription", @class = "form-control", placeholder = "Input VisitDescription", Required = "required" })
                                    </div>
                                </div>*@
                            <div class="form-group">
                                @Html.LabelFor(s => s.OperationSchedule, "OperationSchedule", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-4">
                                    @Html.RadioButtonFor(u => u.OperationSchedule, "Day")
                                    @Html.Label("Day") &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                                    @Html.RadioButtonFor(s => s.OperationSchedule, "Night")
                                    @Html.Label("Night")
                                </div>
                            </div>
                            @*<div class="form-group">
                                    @Html.LabelFor(s => s.OutDorScheduleTime, " OutDorScheduleTime", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(u => u.OutDorScheduleTime, new { id = "OutDorScheduleTime", @class = "form-control", placeholder = "Input OutDorScheduleTime", Required = "required" })
                                    </div>
                                </div>*@
                            <div class="form-group">
                                @Html.LabelFor(s => s.OperationTime, " OperationTime", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.OperationTime, new { id = "OperationTime", @class = "form-control", placeholder = "Input OperationTime", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.OperationDescription, " OperationDescription", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.OperationDescription, new { id = "OperationDescription", @class = "form-control", placeholder = "Input OperationDescription", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-4 col-sm-10">
                                    <input type="submit" class="btn btn-primary" value="Add To Create" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="btn btn-group btn-sm" style="color: #ff6a00;">
                                    @Html.ActionLink("Back To List", "doctorDutyList")
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div id="SaleItems result_area">
                                    <div class="CSSTableGenerator">
                                        <table id="dataTable" class="gridtable" style="font-family:Tahoma;font-size:11px ;"></table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>