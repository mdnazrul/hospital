@model WebApplication2.Models.tbl_UserInfo

@{
    ViewBag.Title = "addUserInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title></title>
</head>
<body>
    <div>
        <h2 style="text-align:center;color:#ff6a00">User Information</h2>
        <hr />
        <h4 style="color:#ff6a00">@ViewBag.Message</h4>
        @using (Html.BeginForm("addUserInfo", "UserInfo", FormMethod.Post))
        {
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(s => s.UserName, " UserName", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.UserName, new { id = "UserName", @class = "form-control", placeholder = "Input UserName", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.Password, " Password", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.PasswordFor(u => u.Password, new { id = "Password", @class = "form-control", placeholder = "Input Password", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.StaffID, "Staff Name", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.DropDownList("StaffID", (SelectList)ViewData["tbl_staffInfo"], "...Select Staff Name...", new { @class = "form-control", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.UserRoleID, "UserRoleName", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.DropDownList("UserRoleID", (SelectList)ViewData["tbl_UserRole"], "...Select UserRoleName...", new { @class = "form-control", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.Isactive, "Select Choice", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-4">
                                    @Html.RadioButtonFor(u => u.Isactive, "Active")
                                    @Html.Label("Active") &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                                    @Html.RadioButtonFor(s => s.Isactive, "Not Active")
                                    @Html.Label("Not Active")
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.Remars, " Remarks", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.Remars, new { id = "Remars", @class = "form-control", placeholder = "Input Remarks", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-4 col-sm-10">
                                    <input type="submit" class="btn btn-primary" value="Save" />
                                    @*<button type="submit" class="btn btn-primary">Save</button>*@
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="btn btn-group btn-sm" style="color: #ff6a00;">
                                    @Html.ActionLink("Create New", "addUserInfo")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</body>
</html>