@model WebApplication2.Models.tbl_staffInfo

@{
    ViewBag.Title = "staffUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<html>
<head>
    <title></title>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")"> </script>
    <script>
        $(document).ready(function () {
            var x = "@this.Request.QueryString["staffid"]";
            $("#StaffTypeID option").each(function () {
                if ($(this).val() == x) {
                    $(this).attr('selected', 'selected');
                }
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            var x = "@this.Request.QueryString["DTypeId"]";
            $("#DesignationID option").each(function () {
                if ($(this).val() == x) {
                    $(this).attr('selected', 'selected');
                }
            });
        });
    </script>
    @*<script>
            $(document).ready(function () {
                var x = "@this.Request.QueryString["imgid"]";
                $("#Image option").each(function () {
                    if ($(this).val() == x) {
                        $(this).attr('selected', 'selected');
                    }
                });
            });
        </script>*@

</head>
<body>
    <div>
        <h2 style="color:#ff6a00;text-align:center;">staff Update</h2>
        <hr />
        <h3 style="color:#ff6a00">@ViewBag.Message</h3>
        @using (Html.BeginForm("staffUpdate", "StaffInformation", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(s => s.Name, " Name", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.Name, new { id = "Name", @class = "form-control", placeholder = "Input Name", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.StaffTypeID, "Select StaffType", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.DropDownList("StaffTypeID", (SelectList)ViewData["tbl_StaffType"], "...Select StaffType...", new { @class = "form-control", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.DesignationID, "Select Designation", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.DropDownList("DesignationID", (SelectList)ViewData["tbl_DesignationType"], "...Select Designation...", new { @class = "form-control", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.PresentAddress, " PresentAddress", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(u => u.PresentAddress, new { id = "PresentAddress", @class = "form-control", placeholder = "Input PresentAddress", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.MobNo, " MobNo", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.MobNo, new { id = "MobNo", @class = "form-control", placeholder = "Input MobNo", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.Image, " Image", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBox("file", "", new { type = "file", id = "Image" })  <br>
                                </div>
                            </div>
                         
                            <div class="form-group">
                                @Html.LabelFor(s => s.EmailNo, " EmailNo", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.EmailNo, new { id = "EmailNo", @class = "form-control", placeholder = "Input EmailNo", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-10">
                                    <input style="width:88px;margin-right:5px" type="submit" class="btn btn-primary" value="Update" />
                                    <a class="btn btn-success" href="/StaffInformation/staffList">Show List</a>
                                </div>
                            </div>
                            @*<div class="form-group">
                                <div class="col-sm-offset-4 col-sm-10">
                                    <input type="submit" class="btn btn-primary" value="Update" />
                                </div>
                            </div>
                            <h3 style="color:#ff0000;">@Html.ActionLink("Back To List", "staffList")</h3>*@
                        </div>
                    </div>
                </div>
            </div>
        }
        <link href="../Content/jquery.datetimepicker.css" rel="stylesheet" type="text/css" />
        <script src="../Scripts/jquery.datetimepicker.full.js" type="text/javascript"></script>
        <script type="text/javascript">
            $('#JoiningDate').datetimepicker({
                timepicker: false,
                format: 'Y-m-d',
                formatDate: 'Y-m-d'
            });
        </script>
    </div>
</body>
</html>
