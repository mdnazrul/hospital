@model WebApplication2.Models.tbl_NurseDuty

@{
    ViewBag.Title = "addNurseDuty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title></title>
</head>
<body>
    <div>
        <h2 style="text-align:center;color:#ff6a00">Nurse Duty</h2>
        <hr />
        @using (Html.BeginForm("addNurseDuty", "NurseDuty", FormMethod.Post))
        {
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(s => s.StaffID, "EmployeeNurse", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.DropDownList("StaffID", (SelectList)ViewData["tbl_staffInfo"], "...Select Nurse...", new { @class = "form-control", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.SectionID, "NurseSection", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.DropDownList("SectionID", (SelectList)ViewData["tbe_NurseSectionType"], "...Select NurseSectionType...", new { @class = "form-control", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.RoomNo, " RoomNo", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(u => u.RoomNo, new { id = "RoomNo", @class = "form-control", placeholder = "Input RoomNo", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.WorkDescription, " WorkDescription", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(u => u.WorkDescription, new { id = "WorkDescription", @class = "form-control", placeholder = "Input WorkDescription", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.Shift, " Shift", new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.RadioButtonFor(u => u.Shift, "Day")
                                    @Html.Label("Day") &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                                    @Html.RadioButtonFor(s => s.Shift, "Evening")
                                    @Html.Label("Evening")
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.VisitTime, " VisitTime", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(u => u.VisitTime, new { id = "VisitTime", @class = "form-control", placeholder = "Input VisitTime", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.VisitDescription, " VisitDescription", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(u => u.VisitDescription, new { id = "VisitDescription", @class = "form-control", placeholder = "Input VisitDescription", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.OperationTime, " OperationTime", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(u => u.OperationTime, new { id = "OperationTime", @class = "form-control", placeholder = "Input OperationTime", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.OperationDescription, " OperationDescription", new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(u => u.OperationDescription, new { id = "OperationDescription", @class = "form-control", placeholder = "Input OperationDescription", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-10">
                                    <input type="submit" class="btn btn-primary" value="Add To Create" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="btn btn-group btn-lg" style="color: #ff6a00;">
                                    @Html.ActionLink("Back To List", "nurseDutyList")
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div id="SaleItems result_area">
                                    <div class="CSSTableGenerator">
                                        <table id="dataTable" class="gridtable" style="font-family:Tahoma;font-size:11px ;"></table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>