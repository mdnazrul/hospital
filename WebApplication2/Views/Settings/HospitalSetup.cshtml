@model IEnumerable<WebApplication2.Models.HR_HospitalSetup>
@{
    ViewBag.Title = "HospitalSetup";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<style>
    div.right_form {
        float: left;
        width: 350px;
    }
</style>
<h2 style="padding-top:30px;color:#ff6a00;text-align:center">Hospital Set Up</h2>
<div class="row">
    <div class="col-md-6">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name"> Hospital Name</label>
                <div class="col-sm-10">
                    <input type="text" id="company_name" class="form-control" name="hospital_name">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name">Address</label>
                <div class="col-sm-10">
                    <textarea required="required" class="form-control" cols="20" id="address" name="address" placeholder="" rows="2"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name"> Contact No.</label>
                <div class="col-sm-10">
                    <input type="text" id="contact_no" class="form-control" name="contact_no">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name"> Fax</label>
                <div class="col-sm-10">
                    <input type="text" id="fax" class="form-control" name="fax">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name"> Email</label>
                <div class="col-sm-10">
                    <input type="text" id="email" class="form-control" name="email">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name"> Web</label>
                <div class="col-sm-10">
                    <input type="text" id="web" class="form-control" name="web">
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name"> Preview </label>
                <div class="col-sm-10">
                    <img src="~/Images/preview.jpg" id="upfile" width="60" height="60" alt="Preview Image">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="Name"> Upload</label>
                <div class="col-sm-10">
                    <input name="file" type="file" id="file" class="txt" onchange="readURL(this);">
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-bordered table-striped">
                <thead>
                    <tr class="success">
                        <th>Hospital Name</th>
                        <th>Address</th>
                        <th>Contact No</th>
                        <th>Fax</th>
                        <th>Email</th>
                        <th>Web</th>
                        <th>Logo</th>
                        <th>Action</th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.CompanyName</td>
                            <td>@item.Company_Address</td>
                            <td>@item.Company_ContactNo</td>
                            <td>@item.Company_Fax</td>
                            <td>@item.Company_Email</td>
                            <td>@item.Company_Web</td>
                            <td>@item.Company_Logo</td>
                            @*<td><img src="~/Images/@item.Image" width="30" height="30" alt="Preview Image" /></td>
                                <td>@item.EmailNo</td>*@
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>

<link href="../Content/jquery.datetimepicker.css" rel="stylesheet" type="text/css" />
<script src="../Scripts/jquery.datetimepicker.full.js" type="text/javascript"></script>
<script type="text/javascript">
    $('#JoiningDate').datetimepicker({
        timepicker: false,
        format: 'Y-m-d',
        formatDate: 'Y-m-d'
    });

    $('#ConfermationDate').datetimepicker({
        timepicker: false,
        format: 'Y-m-d',
        formatDate: 'Y-m-d'
    });
    $('#ReginingDate').datetimepicker({
        timepicker: false,
        format: 'Y-m-d',
        formatDate: 'Y-m-d'
    });

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#upfile')
                    .attr('src', e.target.result).width(60).height(60);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>






