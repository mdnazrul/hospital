@model WebApplication2.Models.tbl_BloodDonerInfo

@{
    ViewBag.Title = "UpdateData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title></title>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")"> </script>
    <script>
        $(document).ready(function () {
            var x = "@this.Request.QueryString["bloodid"]";
            //alert(x);
            $("#BloodID option").each(function () {
                if ($(this).val() == x) {
                    $(this).attr('selected', 'selected');
                }
            });
        });

    </script>
</head>
<body>
    <h2 style="text-align:center;color:#ff0000">UpdateData Blood DonnerInfo</h2>
    <hr />
    <h3 style="color:#ff6a00">@ViewBag.Message</h3>
    <div>
        @using (Html.BeginForm("UpdateData", "BloodDonnerInfo", FormMethod.Post))
        {
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(s => s.BloodDonerName, " Name", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.BloodDonerName, new { id = "BloodDonerName", @class = "form-control", placeholder = "Input BloodDonerName", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.Age, "Age", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.Age, new { id = "Age", @class = "form-control", placeholder = " Input Age", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.Address, "Address", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(u => u.Address, new { id = "Address", @class = "form-control", placeholder = "Address", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.BloodID, " BloodName", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.DropDownList("BloodID", (SelectList)ViewData["tbl_BloodGroup"], "...Select Blood Name...", new { @class = "form-control", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.NationalId, "NationalId", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.NationalId, new { id = "NationalId", @class = "form-control", placeholder = "NationalId", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-4 col-sm-10">
                                    <input type="submit" class="btn btn-primary" value="Update" />
                                </div>
                            </div>
                            <h3>@Html.ActionLink("Back To List", "AddDonerList")</h3>
                            <div class="col-sm-6">
                                <div id="SaleItems result_area">
                                    <div class="CSSTableGenerator">
                                        <table id="dataTable" class="gridtable" style="font-family:Tahoma;font-size:11px ;"></table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>




