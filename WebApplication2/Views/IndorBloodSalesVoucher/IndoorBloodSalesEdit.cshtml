    <script>

        $(document).ready(function () {

            $("#Rate").keyup(function () {
                var x = $("#Quantity").val();
                var y = $("#Rate").val();
                var z = parseInt(x) * parseInt(y);
                $("#TotalAmount").val(parseInt(z));

                var sum = parseInt($("#hidden_grandt").val()) - parseInt($("#hidden_amount").val()) + parseInt($("#TotalAmount").val());
                $("#GrandTotalAmount").val(sum);

                $("#DeuAmount").val($("#GrandTotalAmount").val() - $("#PayAmount").val());
            });

            $("#Rate").keyup(function () {
                var x = $("#Quantity").val();
                var y = $("#Rate").val();
                var z = parseInt(x) * parseInt(y);
                $("#TotalAmount").val(parseInt(z));

                var sum = parseInt($("#hidden_grandt").val()) - parseInt($("#hidden_amount").val()) + parseInt($("#TotalAmount").val());
                $("#GrandTotalAmount").val(sum);

                $("#DeuAmount").val($("#GrandTotalAmount").val() - $("#PayAmount").val());
            });


            $("#PayAmount").keyup(function () {
                var x = $("#GrandTotalAmount").val() - $("#PayAmount").val();
                $("#DeuAmount").val(x);
            });
        });


        $(document).ready(function () {

            //Save button click function
            $('#btnUpdate').click(function () {
                var IndorBloodSalesID = $("#VocherDe_hiddenId").val();
                var IndorBloodsalesVoucherNo = $("#IndorBloodsalesVoucherNo").val();
                var BuyerName = $("#BuyerName").val();
                var BloodID = $("#BloodID").val();
                var Quantity = $("#Quantity").val();
                var Rate = $("#Rate").val();
                var MediUnitID = $("#MediUnitID").val();
                var TotalAmount = $("#TotalAmount").val();
                var GrandTotalAmount = $("#GrandTotalAmount").val();
                var PayAmount = $("#PayAmount").val();
                var DeuAmount = $("#DeuAmount").val();
                if ($('#VocherDe_hiddenId').val() == '' || $('#BuyerName').val() == '' || $('#BloodID').val() == '' || $('#Quantity').val() == '' || $('#Rate').val() == '' || $('#MediUnitID').val() == '' || $('#TotalAmount').val() == '' || $('#GrandTotalAmount').val() == '') {
                    alert('IdoorBloodSalesVocuher Id, BuyerName,Blood Group, Quantity, Rate,MedicineUnite, TotalAmount and GrandTotalAmount are required');
                }                    
                else {
                    var data = {
                        IndorBloodsalesVoucherNo: IndorBloodsalesVoucherNo,
                        BuyerName: BuyerName,                      
                        GrandTotalAmount: GrandTotalAmount,
                        PayAmount: PayAmount,
                        DeuAmount: DeuAmount,
                        IndorBloodSalesID: IndorBloodSalesID,
                        BloodID: BloodID,
                        Quantity: Quantity,
                        Rate: Rate,
                        MediUnitID: MediUnitID,
                        TotalAmount: TotalAmount
                    }

                    $.ajax({
                        url: '../IndorBloodSalesVoucher/IndoorBloodsalesUpdate',
                        type: "POST",
                        data: JSON.stringify(data),
                        dataType: "JSON",
                        contentType: "application/json",
                        success: function (d) {
                            alert(d.message);
                            $('#VocherDe_hiddenId').val('');
                            $('#BuyerName').val('');
                            $("#BloodID").val('Select');
                            $("#Quantity").val('');
                            $("#Rate").val('');
                            $("#MediUnitID").val('Select');
                            $("#TotalAmount").val('');
                            $("#hidden_amount").val('');
                            $("#hidden_grandt").val('');
                            $('#GrandTotalAmount').val('');
                            $('#PayAmount').val('');
                            $('#DeuAmount').val('');
                            $("#btnUpdate").hide();
                            window.location.reload();
                        },
                        error: function () {
                            alert('Error. Please try again.');
                        }
                    });
                }
            });
        });


        function Edit(id, value1, value2, value3, value4, value5, value6, value7, value8,value9)
        {
            $("#VocherDe_hiddenId").val(id);
            $("#BuyerName").val(value1);     
            $("#BloodID option").each(function () {
                if ($(this).val() == value2) {
                    $(this).attr('selected', 'selected');
                }
            });
            $("#Quantity").val(value3);
            $("#Rate").val(value4);        
            $("#MediUnitID").val(value5);
            $("#TotalAmount").val(value6);
            $("#GrandTotalAmount").val(value7);
            $("#PayAmount").val(value8);
            $("#DeuAmount").val(value9);

            // calculate for grand total
            $("#hidden_amount").val(value6);
            $("#hidden_grandt").val(value7);

            $("#btnUpdate").show();
        }

        function IBloodSalesDelete(IndorBloodsalesVoucherNo, id, TotalAmount)
        {
            var IndorBloodSalesID = id;
            var data = {
                IndorBloodsalesVoucherNo: IndorBloodsalesVoucherNo,
                IndorBloodSalesID: IndorBloodSalesID,
                GrandTotalAmount: TotalAmount
            }
            $.ajax({
                url: '../IndorBloodSalesVoucher/IBloodSalesDelete',
                type: "POST",
                data: JSON.stringify(data),
                dataType: "JSON",
                contentType: "application/json",
                success: function (d) {
                    alert(d.message);
                    window.location.reload();
                },
                error: function () {
                    alert('Error. Please try again.');
                }
            });
        }
    </script>
</head>
<body>
    <div>
        <h4 style="text-align:center;color:#ff6a00">Edit Indoor Blood Seles</h4>
        <hr />
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="IndorBloodsalesVoucherNo">IndorBloodsalesNo</label>
                            <input type="text" class="form-control" id="IndorBloodsalesVoucherNo" readonly value="@ViewBag.IndorBloodsalesVoucherNo" />
                            <input type="hidden" class="form-control" id="VocherDe_hiddenId" />
                        </div>
                        <div class="form-group">
                            <label for="BuyerName">BuyerName</label>
                            <input type="text" class="form-control" id="BuyerName" />
                        </div>
                        <div class="form-group">
                            <label for="Blood Group">Blood Group</label>
                            @Html.DropDownList("BloodID", (SelectList)ViewData["tbl_BloodGroup"], "...Select Blood...", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="Quantity">Quantity</label>
                            <input type="text" class="form-control" id="Quantity" />
                        </div>
                        <div class="form-group">
                            <label for="Rate">Rate</label>
                            <input type="text" class="form-control" id="Rate" />
                        </div>
                        <div class="form-group">
                            <label for="Medicine Unite">MediUnitID</label>
                            @Html.DropDownList("MediUnitID", (SelectList)ViewData["tbl_MedicinUnit"], "...Select Blood Unit...", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="TotalAmount">Amount</label>
                            <input type="text" class="form-control" id="TotalAmount" readonly />
                            <input type="hidden" class="form-control" id="hidden_amount" />
                            <input type="hidden" class="form-control" id="hidden_grandt">
                        </div>
                        <div class="form-group">
                            <label for="GrandTotalAmount">Grand Total Amount</label>
                            <input type="text" class="form-control" id="GrandTotalAmount" readonly />
                        </div>
                        <div class="form-group">
                            <label for="PayAmount">Pay Amount</label>
                            <input type="text" class="form-control" id="PayAmount" />
                        </div>
                        <div class="form-group">
                            <label for="DeuAmount">Due Amount</label>
                            <input type="text" class="form-control" id="DeuAmount" readonly />
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-10">
                                <input type="button" class="btn btn-primary" id="btnUpdate" value="Update" style="display:none;" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="btn btn-group btn-lg" style="color: #ff6a00;">
                                @Html.ActionLink("Back To List", "indorBloodsalesLists")
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-horizontal">
                        <div id="SaleItems result_area">
                            <div class="CSSTableGenerator">
                                <table id="dataTable" class="gridtable" style="font-family:Tahoma;font-size:11px ;">
                                    <tbody>
                                        <tr>
                                            <th>Blood</th>
                                            <th>Quantity</th>
                                            <th>Rate</th>
                                            <th>Blood Unit</th>
                                            <th>Amount</th>
                                            <th>Action</th>
                                        </tr>
                                        @foreach (var item in Model.indorBloodSalesDetailsTbl)
                                        {
                                            <tr>
                                                <td>@item.BloodID</td>
                                                <td>@item.Quantity</td>
                                                <td>@item.Rate</td>
                                                <td>@item.tbl_MedicinUnit.UnitName</td>
                                                <td>@item.TotalAmount</td>
                                                <td>
                                                    <input type="button" name="edit" value="Edit" onclick="Edit(@item.IndorBloodSalesID,'@item.tbl_IndorBloodSalesVoucher.BuyerName', @item.BloodID, @item.Quantity, @item.Rate,@item.MediUnitID, @item.TotalAmount, @item.tbl_IndorBloodSalesVoucher.GrandTotalAmount, @item.tbl_IndorBloodSalesVoucher.PayAmount, @item.tbl_IndorBloodSalesVoucher.DeuAmount);">
                                                    &nbsp;
                                                    <input type="button" name="delete" value="Delete" onclick="IBloodSalesDelete('@ViewBag.IndorBloodsalesVoucherNo', @item.IndorBloodSalesID, @item.TotalAmount);">
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                <table id="dataTable1" class="gridtable" style="font-family:Tahoma;font-size:11px;"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>