@model WebApplication2.Models.tbl_Claim
@{
    ViewBag.Title = "addClaim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <div>
        <h2 style="text-align:center;color:#ff6a00">Claim</h2>
        <hr />
        @using (Html.BeginForm("addClaim", "Claim", FormMethod.Post))
        {
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(s => s.CompanyName, " CompanyName", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.CompanyName, new { @class = "textbox", @placeholder = "Input shift", id = "CompanyName" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(s => s.Address, " Address", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(model => model.Address, new { @class = "textbox", @placeholder = "Input Address", id = "Address" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(s => s.ContactPerson, " ContactPerson", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.ContactPerson, new { @class = "textbox", @placeholder = "Input ContactPerson", id = "ContactPerson" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.ContactNo, " ContactMobNo", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.ContactNo, new { @class = "textbox", @placeholder = "Input ContactNo", id = "ContactNo" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.AgreemntInfo, " AgreementInfo", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.AgreemntInfo, new { @class = "textbox", @placeholder = "Input AgreemntInfo", id = "AgreemntInfo" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.Amount, " Amount", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.Amount, new { @class = "textbox", @placeholder = "Input Amount", id = "Amount" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.TimeDuration, " TimeDuration", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.TimeDuration, new { @class = "textbox", @placeholder = "Input TimeDuration", id = "TimeDuration" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.Remarks, " Remarks", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(model => model.Remarks, new { @class = "textbox", @placeholder = "Input Remarks", id = "Remarks" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-10">
                                    <input type="submit" class="btn btn-primary" value="Add To Create" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10" style="color: #ff6a00;">
                                    @Html.ActionLink("Back To List", "claimList")
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div id="SaleItems result_area">
                            <div class="CSSTableGenerator">
                                <table id="dataTable" class="gridtable" style="font-family:Tahoma;font-size:11px ;"></table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>

    <link href="../Content/jquery.datetimepicker.css" rel="stylesheet" type="text/css" />
    <script src="../Scripts/jquery.datetimepicker.full.js" type="text/javascript"></script>
    <script type="text/javascript">
        $('#TimeDuration').datetimepicker({
            timepicker: false,
            format: 'Y-m-d',
            formatDate: 'Y-m-d'
        });  
    </script>
</body>

</html>

