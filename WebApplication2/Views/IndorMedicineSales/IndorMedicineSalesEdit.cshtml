                var c = $("#DiscountAmount").val();
                var discount = parseFloat(a) * parseFloat(c / 100);
                var grandTotal = parseFloat(a) + parseFloat(vat) - parseFloat(discount);
                $("#GrandTotalAmount").val(parseFloat(grandTotal));
