        $(document).ready(function () {

            //Save button click function
            $('#btnUpdate').click(function () {

                var IndorMedicenSaleseId = $("#VocherDe_hiddenId").val();
                var IndorMedicenSaleseVocherNo = $("#IndorMedicenSaleseVocherNo").val();
                var PatientID = $("#PatientID").val();
                var MediInfoID = $("#MediInfoID").val();
                var Rate = $("#Rate").val();
                var Quantity = $("#Quantity").val();
                var Amount = $("#Amount").val();
                var TotalAmount = $("#TotalAmount").val();
                var VatAmount = $("#VatAmount").val();
                var DiscountAmount = $("#DiscountAmount").val();
                var GrandTotalAmount = $("#GrandTotalAmount").val();
                var PayAmount = $("#PayAmount").val();
                var DueAmount = $("#DueAmount").val();

                if ($('#VocherDe_hiddenId').val() == '' || $('#PatientID').val() == '' || $('#MediInfoID').val() == '' || $('#Rate').val() == '' || $('#Quantity').val() == '' || $('#TotalAmount').val() == '' || $('#GrandTotalAmount').val() == '') {
                    alert('Vocuher Id,PatientName,MedicineName, Quantity, Rate, TotalAmount and GrandTotal are required');
                }
                else {
                    var data = {
                        IndorMedicenSaleseVocherNo: IndorMedicenSaleseVocherNo,
                        PatientID: PatientID,
                        TotalAmount: TotalAmount,
                        VatAmount: VatAmount,
                        DiscountAmount: DiscountAmount,
                        GrandTotalAmount: GrandTotalAmount,
                        PayAmount: PayAmount,
                        DueAmount: DueAmount,
                        IndorMedicenSaleseId: IndorMedicenSaleseId,
                        MediInfoID: MediInfoID,
                        Rate: Rate,
                        Quantity: Quantity,
                        Amount: Amount
                    }

                    $.ajax({
                        url: '../IndorMedicineSales/IndorMedicineSalesUpdate',
                        type: "POST",
                        data: JSON.stringify(data),
                        dataType: "JSON",
                        contentType: "application/json",
                        success: function (d) {
                            alert(d.message);
                            $('#VocherDe_hiddenId').val('');
                            $('#PatientID').val('');
                            //$('#TotalAmount').val('');
                            $("#MediInfoID").val('Select');
                            $("#Rate").val('');
                            $("#Quantity").val('');
                            $("#Amount").val('');
                            $("#hidden_amount").val('');
                            $('#TotalAmount').val('');
                            $('#VatAmount').val('');
                            $('#DiscountAmount').val('');
                            $("#hidden_grandt").val('');
                            $('#GrandTotalAmount').val('');
                            $('#PayAmount').val('');
                            $('#DueAmount').val('');

                            $("#btnUpdate").hide();

                            window.location.reload();
                        },
                        error: function () {
                            alert('Error. Please try again.');
                        }
                    });
                }
            });
        });


        function Edit(id, value1, value2, value3, value4, value5, value6, value7, value8, value9, value10, value11) {
            $("#VocherDe_hiddenId").val(id);
            $("#PatientID").val(value1);
            $("#MediInfoID option").each(function () {
                if ($(this).val() == value2) {
                    $(this).attr('selected', 'selected');
                }
            });

            $("#Rate").val(value3);
            $("#Quantity").val(value4);
            $("#Amount").val(value5);
            $("#TotalAmount").val(value6);
            $("#VatAmount").val(value7);
            $("#DiscountAmount").val(value8);
            $("#GrandTotalAmount").val(value9);
            $("#PayAmount").val(value10);
            $("#DueAmount").val(value11);

            // calculate for grand total
            $("#hidden_amount").val(value5);
            $("#hidden_totalamount").val(value6);

            $("#btnUpdate").show();
        }

