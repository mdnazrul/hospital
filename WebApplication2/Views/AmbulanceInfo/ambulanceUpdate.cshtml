@model WebApplication2.Models.tbl_AmbulanceInfo

@{
    ViewBag.Title = "ambulanceUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title></title>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-3.1.1.min.js")"> </script>
    <script>
        $(document).ready(function () {
            var x = "@this.Request.QueryString["userid"]";
            $("#StaffID option").each(function () {
                if ($(this).val() == x) {
                    $(this).attr('selected', 'selected');
                }
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            var x = "@this.Request.QueryString["amcid"]";
            $("#AmbCatagoryID option").each(function () {
                if ($(this).val() == x) {
                    $(this).attr('selected', 'selected');
                }
            });
        });
    </script>
</head>
<body>
    <h2 style="text-align:center;color:#ff6a00">Ambulance Update</h2>
    <hr />
    <h4 style="color:#ff6a00">@ViewBag.Message</h4>
    @using (Html.BeginForm("ambulanceUpdate", "AmbulanceInfo", FormMethod.Post))
    {
        <div class="container">
            <div class="col-sm-12">
                <div class="row">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(s => s.AmbPlateNo, " AmbulancePlateNo", new { @class = "control-label col-sm-2" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(u => u.AmbPlateNo, new { id = "AmbPlateNo", @class = "form-control", placeholder = "Input AmbPlateNo", Required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(s => s.AmbCatagoryID, "AmbulanaceType", new { @class = "control-label col-sm-2" })
                            <div class="col-sm-10">
                                @Html.DropDownList("AmbCatagoryID", (SelectList)ViewData["tbl_AmbCatagory"], "...Select StaffName...", new { @class = "form-control", Required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(s => s.StaffID, "EmployeeName", new { @class = "control-label col-sm-2" })
                            <div class="col-sm-10">
                                @Html.DropDownList("StaffID", (SelectList)ViewData["tbl_staffInfo"], "...Select StaffName...", new { @class = "form-control", Required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(s => s.FreeOrBusy, " FreeOrBusy", new { @class = "control-label col-sm-2" })
                            <div class="col-sm-10">
                                @Html.RadioButtonFor(u => u.FreeOrBusy, "Free")
                                @Html.Label("Free") &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                                @Html.RadioButtonFor(u => u.FreeOrBusy, "Busy")
                                @Html.Label("Busy")
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-4 col-sm-10">
                                <input type="submit" class="btn btn-primary" value="Save" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="btn btn-group btn-sm" style="color: #ff6a00;">
                                @Html.ActionLink("Back To List", "ambulanceInfoList")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
