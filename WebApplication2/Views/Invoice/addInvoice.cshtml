                        </div>
                        <div class="form-group">
                            <label for="Service Name">Service Name</label>
                            @Html.DropDownList("ServiceId", (SelectList)ViewData["tbl_Service"], "...Select Service Name...", new { @class = "form-control" })
                        </div>
