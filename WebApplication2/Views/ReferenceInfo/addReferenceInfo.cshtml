@model WebApplication2.Models.tbl_Referenceinfo

@{
    ViewBag.Title = "addReferenceInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title></title>
</head>
<body>
    <h2 style="color:#ff6a00;text-align:center;">Reference Information</h2>
    <hr />
    <div>
        @using (Html.BeginForm("addReferenceInfo", "ReferenceInfo", FormMethod.Post))
        {
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(s => s.ReferenceName, " ReferenceName", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.ReferenceName, new { id = "ReferenceName", @class = "form-control", placeholder = "Input ReferenceName", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.Address, " Address", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextAreaFor(u => u.Address, new { id = "Address", @class = "form-control", placeholder = "Input Address", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.PhoneNo, " MobNo", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.PhoneNo, new { id = "PhoneNo", @class = "form-control", placeholder = "Input MobNo", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.AgreementInfo, " AgreementInfo", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.AgreementInfo, new { id = "AgreementInfo", @class = "form-control", placeholder = "Input AgreementInfo", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.Amount, " Amount", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.Amount, new { id = "Amount", @class = "form-control", placeholder = "Input Amount", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(s => s.TimeDuration, " TimeDuration", new { @class = "control-label col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(u => u.TimeDuration, new { id = "TimeDuration", @class = "form-control", placeholder = "Input TimeDuration", Required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-4 col-sm-10">
                                    <input type="submit" class="btn btn-primary" value="Add Create" />
                                </div>
                            </div>
                            <h3 style="color:#ff6a00">@Html.ActionLink("Back To List", "referenceList")</h3>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <link href="../Content/jquery.datetimepicker.css" rel="stylesheet" type="text/css" />
    <script src="../Scripts/jquery.datetimepicker.full.js" type="text/javascript"></script>
    <script type="text/javascript">
        $('#TimeDuration').datetimepicker({
            timepicker: false,
            format: 'Y-m-d',
            formatDate: 'Y-m-d'
        });
    </script>
</body>
</html>